<?xml version="1.0" encoding="utf-8"?>
<!-- android:shape指定形状类型，默认为rectangle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >

    <!-- padding设置内间距 -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
    <!-- size设置形状的大小 -->
    <size
        android:height="40dp"
        android:width="40dp" />
    <!-- gradient设置渐变 -->
    <!--
        <gradient
        android:endColor="@color/blue"
        android:gradientRadius="40"
        android:startColor="@color/blue"
        android:type="radial" />
    -->
    <!-- gradient设置填充 -->
    <solid android:color="@color/blue" />

</shape>